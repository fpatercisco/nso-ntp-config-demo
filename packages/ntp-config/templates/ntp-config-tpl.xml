<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device}</name>
      <config>
        <ntp xmlns="urn:ios">
          <server>
            <peer-list>
              <name>{$PRIMARY_NTP_SERVER_IP}</name>
              <prefer/>
            </peer-list>
            <peer-list>
              <name>{$SECONDARY_NTP_SERVER_IP}</name>
            </peer-list>
          </server>
        </ntp>
	<configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm">
          <system>
            <ntp>
              <server>
                <name>{$PRIMARY_NTP_SERVER_IP}</name>
		<prefer/>
              </server>
              <server>
		<name>{$SECONDARY_NTP_SERVER_IP}</name>
              </server>
            </ntp>
          </system>
        </configuration>
      </config>
    </device>
  </devices>
</config>
